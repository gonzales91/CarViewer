@model IEnumerable<Car>

<div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Car</th>
                <th>Color</th>
                <th>
                    <a asp-action="Create" class="btn btn-info">Create new car</a>
                </th>
                <th>
                    <a asp-action="Graph" class="btn btn-info">Statistic</a>
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(motelItem => item.Id)</td>
                    <td>@Html.DisplayFor(motelItem => item.Cars)</td>
                    <td>@Html.DisplayFor(motelItem => item.Color)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
</div>